{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "outDir": "lib"
  },
  "exclude": ["lib", "dist", "rollup.config.js", "test"]
}